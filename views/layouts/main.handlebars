<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Navbar partial -->
    {{> navbar}}

    <!-- Page-specific content will be inserted here -->
    <div class="content">
        {{{body}}}  <!-- This will insert the content for the specific page -->
    </div>

    <!-- Footer (optional, if you have a footer partial) -->
    {{> footer}}

    <script src="/script.js"></script>
</body>
</html>
